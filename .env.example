# ==============================================================
# RPG Platform – Environment Variables
# Copy this file to .env and fill in the values.
# ==============================================================

# PostgreSQL
POSTGRES_DB=rpgplatform
POSTGRES_USER=rpg
POSTGRES_PASSWORD=changeme_strong_password

# Prisma connection string (used by Next.js / Prisma at runtime)
DATABASE_URL=postgresql://rpg:changeme_strong_password@localhost:5432/rpgplatform

# Auth – generate a strong secret e.g.: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_HEX

# App
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NODE_ENV (production | development)
NODE_ENV=production
